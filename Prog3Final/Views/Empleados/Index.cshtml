@model IEnumerable<Prog3Final.Empleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <h2 class="title text-center">Lista de los empleados activos</h2>

        <button class="btn btn-primary">@Html.ActionLink("Crear Nuevo", "Create", "Empleados", new { style = "text-decoration:none;color:white" })</button>

    <table class="table">
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayName("Fecha de Ingreso")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th style="column-span">
                @Html.DisplayName("Status")
            </th>
            <th>

            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr class="table-active">
                @if (item.estatus == "Activo")
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaIngreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>

                        @Html.DisplayFor(modelItem => item.estatus)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                        @Html.ActionLink("Inactivar", "Create", "Salida")
                    </td>
                }
            </tr>
        }
    </table>

</div>

