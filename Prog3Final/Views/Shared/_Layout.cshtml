                        <li class=nav-item><a class="nav-link" href="#">@Html.ActionLink("Licencias", "Index", "Licencias", null, new { style = "text-decoration:none;color:white" })</a></li>
                        <li class=nav-item><a class="nav-link" href="#">@Html.ActionLink("Permisos", "Index", "Permisos", null, new { style = "text-decoration:none;color:white" })</a></li>
