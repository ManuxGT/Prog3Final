@model IEnumerable<Prog3Final.Departamento>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}


<div class="jumbotron">
    <h2 class="title text-center">Index</h2>
    <p>
        <button class="btn btn-danger">@Html.ActionLink("Create New", "Create")</button>
    </p>
    <table class="table table-bordered">
        <tr class="btn-success">
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.Codigo)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="btn-info">
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.Codigo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |

                </td>
            </tr>
        }
    </table>

</div>